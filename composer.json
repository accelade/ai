{
    "name": "accelade/ai",
    "description": "AI-powered components for Accelade - Global Search, Chat, and Copilot widgets",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io",
            "homepage": "https://3x1.io",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/fadymondy/accelade",
    "keywords": [
        "laravel",
        "blade",
        "ai",
        "artificial-intelligence",
        "openai",
        "anthropic",
        "claude",
        "gemini",
        "chat",
        "copilot",
        "search",
        "spotlight"
    ],
    "require": {
        "php": "^8.2",
        "accelade/accelade": "^1.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0"
    },
    "require-dev": {
        "blade-ui-kit/blade-heroicons": "^2.6",
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\AI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\AI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\AI\\AIServiceProvider"
            ],
            "aliases": {
                "AI": "Accelade\\AI\\Facades\\AI"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "format": "pint",
        "format:test": "pint --test"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "v1.0.0"
}
